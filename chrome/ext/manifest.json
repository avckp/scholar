{
	"name":"Scholar : Your Research Assistant",
	"version":"0.0.1",
	"manifest_version" : 2,
	"description":"Web Research Made Recallable",
	"homepage_url" : "http://knowmix.wordpress.com",
	"icons":{
		"16":"icons/icon16.png",
		"48":"icons/icon48.png",
		"128":"icons/icon128.png"
	},
	"default_locale":"en",

	"background": {

		"scripts" : ["src/bg/background.js"],
		"persistent": true
  	},
	

	"permissions":[
		"contextMenus",
		"http://*/*",
		"https://*/*",
		"clipboardRead",
		"clipboardWrite",
		"unlimitedStorage"
	],

	"content_scripts":[
		{
			"matches":["*://*/*"],
			"js":["src/inject/inject.js"],
			"run_at":"document_start"
		}
	]
}
